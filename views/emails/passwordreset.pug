extends baseEmail

block content
    p Hi #{firstName},
    p Forgot Your password? Visit this URL and change Your password(Please be aware it's Only valid for 10 minutes): #{url}
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
      tbody
        tr
          td(align='left')
            table(role='presentation', border='0', cellpadding='0', cellspacing='0')
              tbody
                tr
                  td
                    a(href=`${url}`, target='_blank') Reset Your Password
    p if you did Not Forget your Password,Please Ignore this Email!